const videoInput = document.getElementById('videoInput');
const teslaVideo = document.getElementById('teslaVideo');

videoInput.addEventListener('change', (event) => {
    const file = event.target.files[0];
    if (file) {
        const url = URL.createObjectURL(file);
        teslaVideo.src = url;
        teslaVideo.play();
        console.log('Video geladen:', file.name);
        // Hier later telemetry processing toevoegen
    }
});
